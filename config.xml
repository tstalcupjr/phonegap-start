<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.tjstalcup.bf3companion"
	version 	= "0.1.0">

	<name>Battlefield 3 Companion</name>

	<description>
		The ultimate companion to a Battlefield 3 Gamer. Achievements, Maps, Weapons, Vehicles, Unlocks, Medals and Ribbons. More information being added daily.
	</description>

	<author href="http://tjstalcup.com"
		email="twstalcupjr@gmail.com">
		Thomas Stalcup Jr
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
	</gap:platforms>

	<icon src="icon_iphone.png" gap:role="default" />

    <gap:splash src="Default.png" />

	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- sample preference specification -->
	<preference name="autorotate" value="false" readonly="true"/>
</widget>
